<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F7F7"
    android:layout_margin="@dimen/spacing_5"
    android:id="@+id/parentLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/imageLayout"
        android:layout_width="wrap_content"
        app:cardCornerRadius="@dimen/spacing_5"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgSrc"
            android:layout_width="@dimen/spacing_38.21"
            android:layout_height="@dimen/spacing_38.21"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_eleven"/>

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imageLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text2_size"
            android:layout_marginLeft="@dimen/spacing_20"
            android:textColor="#525353"
            android:fontFamily="@font/montserrat_medium"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/spacing_20"
            android:layout_marginTop="@dimen/spacing_5">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/spacing_7.54"
                android:layout_height="@dimen/spacing_10"
                android:textColor="#525353"
                android:src="@drawable/map_marker"/>

            <TextView
                android:id="@+id/distance"
                android:layout_width="@dimen/spacing_24"
                android:layout_height="@dimen/spacing_10"
                android:textSize="@dimen/text_size"
                android:textColor="#525353"
                android:layout_marginLeft="@dimen/spacing_5"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="@dimen/spacing_7"/>

            <TextView
                android:id="@+id/hour"
                android:layout_width="@dimen/spacing_26"
                android:layout_height="@dimen/spacing_10"
                android:textSize="@dimen/text_size"
                android:textColor="#CE533D"
                android:layout_marginLeft="@dimen/spacing_5"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="@dimen/spacing_7"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="30dp"
                android:layout_height="10dp"
                android:textSize="@dimen/text_size"
                android:textColor="#6F7171"
                android:layout_marginLeft="@dimen/spacing_5"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginBottom="@dimen/spacing_7"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>