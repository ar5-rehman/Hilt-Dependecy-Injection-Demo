<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    android:padding="@dimen/spacing_1">

    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:id="@+id/optionLayout"
        android:layout_width="@dimen/spacing_30.27"
        android:layout_height="@dimen/spacing_30.27"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_17"
        android:layout_marginTop="@dimen/spacing_17"
        android:background="@drawable/option_background">

        <ImageView
            android:id="@+id/categoryImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_15.65"
            android:layout_centerInParent="true"
            android:src="@drawable/option" />

    </RelativeLayout>
</RelativeLayout>